Pattern Program

        1 
      * * * 
    2 2 2 2 2 
  * * * * * * * 
3 3 3 3 3 3 3 3 3 



#include<stdio.h>
int main()
{
        int n;
        printf("Enter the n value:\n");
        scanf("%d",&n);
        for(int i=0;i<n;i++)
        {
                for(int s=0;s<n-i-1;s++)
                        printf("  ");
                for(int j=0;j<(2*i)+1;j++)
                {
                        if(i%2==0)
                                printf("%d ",i/2+1);
                        else
                                printf("* ");
                }
                printf("\n");
        }
}

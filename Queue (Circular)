Implementation of Circular Queue using Arrays


#include<stdio.h>
#define max 5
int q[max];
int flag=0,rear=0,front=0;

void insert();
void delete();
void display();

int main()
{
        int op;
        while(1)
        {
                printf("Enter the option 1.Insert 2.Delete 3.Display 4.Exit\n");
                scanf("%d",&op);
                switch(op)
                {
                        case 1: insert(); break;
                        case 2: delete(); break;
                        case 3: display(); break;
                        case 4: printf("Queue Operation is Over!\n"); return 0;
                        default : printf("Invalid Option\n"); return 0;
                }
        }
}
void insert()
{
        int num;
        if(flag && (rear >= front))
        {
                printf("Queue is Overflow\n");
                return;
        }

        printf("Enter the data to Insert\n");
        scanf("%d",&num);

        q[rear++]=num;
        printf("%d is inserted in Queue\n",num);

        if(rear==max)
        {
                flag=!flag;
                rear=0;
        }
}
void delete()
{
        if((!flag) && (front >= rear))
        {
                printf("Queue is Underflow\n");
                return;
        }

        printf("%d is deleted in Queue\n",q[front]);
        q[front++]=0;

        if(front==max)
        {
                flag=!flag;
                front=0;
        }
}
void display()
{
        if((front==rear) && (flag==0))
        {
                printf("Queue is empty\n");
                return;
        }
        int i;
        for(i=0;i<max;i++)
                printf("%d ",q[i]);
        printf("\n");
}

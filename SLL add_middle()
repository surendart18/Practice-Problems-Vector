


#include<stdio.h>
#include<stdlib.h>

typedef struct st
{
        int roll;
        char name[20];
        float marks;
        struct st *next;
}ST;

void add_middle(ST **);
void save(ST *);
void print(ST *);
int main()
{
        char op;
        ST *hptr=0;
        do
        {
                add_middle(&hptr);
                printf("Do you want to add one more student record\n");
                scanf(" %c",&op);
        }while((op=='y') || (op=='Y'));

        print(hptr);
        save(hptr);
}

void add_middle(ST **ptr)
{
        ST *temp=(ST *)malloc(sizeof(ST));
        printf("Enter the Roll,Name,Marks\n");
        scanf("%d %s %f",&temp->roll,temp->name,&temp->marks);
        if((*ptr==0)||(temp->roll<(*ptr)->roll))
        {
                temp->next=*ptr;
                *ptr=temp;
        }
        else
        {
                ST *last=*ptr;
                while((last->next!=0)&&(last->next->roll<temp->roll))
                        last=last->next;
                temp->next=last->next;
                last->next=temp;
        }
}

void print(ST *ptr)
{
        printf("Printing the records..\n");
        while(ptr)
        {
                printf("%d %s %f\n",ptr->roll,ptr->name,ptr->marks);
                ptr=ptr->next;
        }
}

void save(ST *ptr)
{
        FILE *fp=fopen("data1.txt","w");
        while(ptr)
        {
                fprintf(fp,"%d %s %f\n",ptr->roll,ptr->name,ptr->marks);
                ptr=ptr->next;
        }
}
 

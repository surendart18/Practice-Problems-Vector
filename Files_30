Write a Program to understand the fread() operation


#include<stdio.h>
int main()
{
        char ch;
        int x;
        float f;
        char a[10];

        FILE *fp=fopen("data.txt","r");

        if(fp==NULL)
        {
                printf("File doesn't exist\n");
                return 0;
        }

        fread(&ch,sizeof(char),1,fp);
        fread(&x,sizeof(int),1,fp);
        fread(&f,sizeof(float),1,fp);
        fread(a,sizeof(char),10,fp);

        printf("ch=%c\n",ch);
        printf("x=%d\n",x);
        printf("f=%f\n",f);
        printf("a=%s\n",a);
}

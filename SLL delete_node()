Delete the Particular Node based on Roll




void delete_node(ST **ptr,int n)            // ST **ptr=&hptr, int n=roll;
{
        ST *temp=*ptr;
        ST *prev=NULL;
        while(temp)
        {
                if(temp->roll==n)
                {
                        if(temp==*ptr)
                        {
                                *ptr=temp->next;
                        }
                        else
                        {
                                prev->next=temp->next;
                        }
                        free(temp);
                        return ;

                }
                else
                {
                        prev=temp;
                        temp=temp->next;
                }
        }
        printf("Roll numbers are not matched..\n");
        exit(0);   // Not found then terminates the program immediately
}

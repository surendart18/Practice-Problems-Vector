Write a program to provide float input to a program
Using my_atof() User defined function.


#include<stdio.h>
float my_atof(const char*p);
int main(int argc,char *argv[])
{
        float f;
        if(argc!=2)
        {
                printf("Usage: ./a.out float\n");
                return 0;
        }
        f=my_atof(argv[1]);
        printf("x=%f\n",f);
}
float my_atof(const char*p)
{
        int i=0,sum1=0;
        float sum2=0,f=0.1;
        if(p[0]=='-' || p[0]=='+')
                i=1;
        for(;p[i] && p[i]!='.';i++)
        {
                if(p[i]>='0' && p[i]<='9')
                        sum1=sum1*10+(p[i]-48);
                else
                        break;
        }
        if(p[i]=='.')
        {
                for(i=i+1;p[i];i++)
                {
                        if(p[i]>='0' && p[i]<='9')
                                sum2=sum2+(f*(p[i]-48));
                            f=f*0.1;
                }
        }
        if(p[0]=='-')
                return -(sum1+sum2);
        else
                return sum1+sum2;
}

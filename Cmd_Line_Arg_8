Write a program to implement basic Calculator program using command line arguments


#include<stdio.h>
#include<stdlib.h>
int main(int argc, char *argv[])
{
        if(argc!=4)
        {
                printf("Usage: ./a.out int int op\n");
                return 0;
        }
        int x,y,z;
        x=atoi(argv[1]);
        y=atoi(argv[2]);
        switch(argv[3][0])
        {
                case '+':
                        z=x+y;
                                break;
                case '-':
                        z=x-y;
                                break;
                case '*':
                        z=x*y;
                                break;
                case '/':
                        if(y==0)
                        {
                                printf("Error\n");
                                return 0;
                        }
                        z=x/y;
                                break;

   
                case '%':
                        if(y==0)
                        {
                                printf("Error\n");
                                return 0;
                        }
                        z=x%y;
                                break;
                default:
                        printf("Invalid Option\n");
                        return 0;
        }
        printf("%d %c %d = %d \n",x,argv[3][0],y,z);
}

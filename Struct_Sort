WAP to get details of five student record which are Roll NO. , Name, Marks, and then Sort the record based on Roll NO., Name, Marks (Data from runtime).


#include<stdio.h>
#include<string.h>
struct st
{
        int roll;
        char name[30];
        float marks;
};
void scan(struct st *p);
void print(struct st *p);
void sort(struct st *p);
int main()
{
        struct st s[5];
        scan(s);
        print(s);
        sort(s);
        print(s);
}
void scan(struct st *p)
{
        printf("Enter the data:\n");
        for(int i=0;i<5;i++)
        {
                scanf("%d %s %f",&p[i].roll,p[i].name,&p[i].marks);
        }
}
void print(struct st *p)
{
        for(int i=0;i<5;i++)
        {
                printf("%d %s %f\n",p[i].roll,p[i].name,p[i].marks);
        }
}
void sort(struct st *p)
{
        int i,j,op,n=5;
        struct st temp;
        printf("Enter 1.Roll 2.Name 3.Marks\n");
        scanf("%d",&op);
        for(i=0;i<n-1;i++)
        {
                for(j=0;j<n-i-1;j++)
                {
                        if(op==1)
                        {
                                if(p[j].roll>p[j+1].roll)
                                {
                                        temp=p[j];
                                        p[j]=p[j+1];
                                        p[j+1]=temp;
                                }
                        }
                        if(op==2)
                        {
                                if(strcmp(p[j].name,p[j+1].name)>0)
                                {
                                        temp=p[j];
                                        p[j]=p[j+1];
                                        p[j+1]=temp;
                                }
                        }
                        if(op==3)
                        {
                                if(p[j].marks>p[j+1].marks)
                                {
                                        temp=p[j];
                                        p[j]=p[j+1];
                                        p[j+1]=temp;
                                }
                        }
                }
        }
}

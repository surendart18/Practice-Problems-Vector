#include<stdio.h>
int main()
{
        int n,i=1,sum=0;
        printf("Enter the number: \n");
        scanf("%d",&n);
        while(i<=n/2)
        {
                if(n%i==0)
                        sum+=i;
                i++;
        }
        if((sum==n)&&(n!=0))
                printf("It is perfect number \n");
        else
                printf("It is not Perfect number\n");
}
